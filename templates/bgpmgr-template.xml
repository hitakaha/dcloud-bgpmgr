<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">


    <device>
    <name>{/dev1}</name>
      <config>
        <route-policy xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <name>PASS</name>
          <value>pass</value>
        </route-policy>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
            <bgp-no-instance>
	    <id>{/dev1-as}</id>
              <bgp>
                <router-id>10.2.1.2</router-id>
                <update-delay>
                  <update-delay-value>0</update-delay-value>
                </update-delay>
              </bgp>
              <address-family>
                <ipv4>
                  <unicast>
                    <redistribute>
                      <connected/>
                    </redistribute>
                  </unicast>
                </ipv4>
              </address-family>
              <neighbor>
                <id>10.2.1.3</id>
		<remote-as>{/dev2-as}</remote-as>
                <address-family>
                  <ipv4>
                    <unicast>
                      <route-policy>
                        <direction>in</direction>
                        <name>PASS</name>
                      </route-policy>
                      <route-policy>
                        <direction>out</direction>
                        <name>PASS</name>
                      </route-policy>
                    </unicast>
                  </ipv4>
                </address-family>
              </neighbor>
            </bgp-no-instance>
          </bgp>
        </router>
      </config>
    </device>

    <device>
    <name>{/dev2}</name>
      <config>
        <route-policy xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <name>PASS</name>
          <value>pass</value>
        </route-policy>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
            <bgp-no-instance>
	    <id>{/dev2-as}</id>
              <bgp>
                <router-id>10.2.1.3</router-id>
                <update-delay>
                  <update-delay-value>0</update-delay-value>
                </update-delay>
              </bgp>
              <address-family>
                <ipv4>
                  <unicast>
                    <redistribute>
                      <connected/>
                    </redistribute>
                  </unicast>
                </ipv4>
              </address-family>
              <neighbor>
                <id>10.2.1.2</id>
		<remote-as>{/dev1-as}</remote-as>
                <address-family>
                  <ipv4>
                    <unicast>
                      <route-policy>
                        <direction>in</direction>
                        <name>PASS</name>
                      </route-policy>
                      <route-policy>
                        <direction>out</direction>
                        <name>PASS</name>
                      </route-policy>
                    </unicast>
                  </ipv4>
                </address-family>
              </neighbor>
            </bgp-no-instance>
          </bgp>
        </router>
      </config>
    </device>


  </devices>
</config-template>
